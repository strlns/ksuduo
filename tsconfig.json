{
  "compilerOptions": {
    "allowJs": true,
    "downlevelIteration": true,
    "jsx": "react",
    //babel in production, so no "es2015.collection","es2015.iterable" in "lib"
    "lib": [
      "es6",
      "dom"
    ],
    "outDir": "./dist/",
    "module": "es6",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noImplicitThis": true,
    "sourceMap": true,
    "strict": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types",
      "node_modules"
    ],
    "types": [
      "node",
      "react",
      "react-dom"
    ]
  }
}